{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$discord": ["src/lib/discord"],
      "$discord/*": ["src/lib/discord/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.svelte",
    "./tests/**/*.ts",
    "./scripts/**/*.ts"
  ]
}
