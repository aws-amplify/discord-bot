{
  "name": "@aws-amplify/discord-bot",
  "type": "module",
  "version": "1.5.1-next.8",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter ./apps/discord-bot-frontend run dev",
    "dev-lib": "pnpm -r run build -w",
    "build": "pnpm -r run build",
    "build-docker": "sh ./scripts/build-docker.sh",
    "build-lib": "pnpm --filter \"./packages/*\" run build",
    "check": "prettier --check .",
    "lint": "eslint .",
    "setup-dev": "pnpm install && pnpm run build-lib",
    "setup-test": "pnpm run -r --if-present setup-test",
    "test": "pnpm -r run test"
  },
  "devDependencies": {
    "@aws-amplify/discord-bot-scripts": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false,
    "svelteSortOrder": "options-scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteAllowShorthand": false,
    "plugins": [
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "svelte3",
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "*.cjs",
      "cdk/cdk.out/",
      "build/"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "settings": {
      "svelte3/typescript": true
    },
    "rules": {
      "@typescript-eslint/prefer-ts-expect-error": "warn",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "packageManager": "pnpm@8.10.5",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    },
    "patchedDependencies": {
      "@aws-sdk/util-user-agent-node@3.127.0": "patches/@aws-sdk__util-user-agent-node@3.127.0.patch"
    }
  },
  "lint-staged": {
    "*.(ts|js|svelte)": [
      "prettier --list-different",
      "eslint"
    ],
    "*.(md|yaml|graphql,json)": "prettier --list-different"
  }
}
