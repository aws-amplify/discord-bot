{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "remove",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.svelte",
    "./tests/**/*.ts",
    "./scripts/**/*.ts"
  ]
}
