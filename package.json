{
  "name": "@aws-amplify/discord-bot",
  "type": "module",
  "version": "0.7.2",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "packages": "pnpm --filter \"./packages/**\"",
    "start": "node build/server.js",
    "dev": "vite dev",
    "dev:lib": "pnpm -r run build -w",
    "build": "vite build && pnpm build:server",
    "build:lib": "pnpm packages run build",
    "build:server": "vite build --mode server",
    "check": "prettier --check .",
    "lint": "eslint **/*.{js,ts,svelte}",
    "prepare": "prisma generate",
    "pretest": "pnpm package",
    "setup": "pnpm install && pnpm build:lib",
    "test": "vitest",
    "e2e": "vitest run --mode e2e",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@aws-crypto/sha256-js": "^2.0.1",
    "@discordjs/rest": "^0.4.1",
    "@next-auth/prisma-adapter": "^1.0.3",
    "@prisma/client": "^3.14.0",
    "cookie": "^0.5.0",
    "discord-api-types": "^0.33.0",
    "discord.js": "^13.7.0",
    "express": "^4.18.1",
    "fast-glob": "^3.2.11",
    "fuzzy": "^0.1.3",
    "next-auth": "^4.3.4",
    "prisma": "^3.15.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@hey-amplify/scripts": "workspace:*",
    "@hey-amplify/support": "workspace:*",
    "@hey-amplify/tsconfig": "workspace:*",
    "@sveltejs/adapter-node": "1.0.0-next.79",
    "@sveltejs/kit": "1.0.0-next.366",
    "@types/cookie": "^0.5.1",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.29",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "@vitest/ui": "^0.17.1",
    "carbon-components-svelte": "^0.64.2",
    "carbon-icons-svelte": "^11.0.1",
    "carbon-preprocess-svelte": "^0.9.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "supertest": "^6.2.4",
    "svelte": "3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.14",
    "vitest": "^0.17.1"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false,
    "svelteSortOrder": "scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteAllowShorthand": false,
    "plugins": [
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "svelte3",
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "*.cjs",
      "cdk/cdk.out/",
      "build/"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "settings": {
      "svelte3/typescript": true
    }
  },
  "packageManager": "pnpm@7.1.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  },
  "lint-staged": {
    "*.(ts|js|svelte)": [
      "prettier --list-different",
      "eslint"
    ],
    "*.(md|yaml|graphql,json)": "prettier --list-different"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ],
      "body-max-line-length": [
        2,
        "always",
        80
      ],
      "scope-case": [
        0,
        "always",
        "lower-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "test",
          "style",
          "release"
        ]
      ]
    }
  }
}
