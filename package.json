{
  "name": "@aws-amplify/discord-bot",
  "type": "module",
  "version": "0.5.1",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "packages": "pnpm --filter \"./packages/**\"",
    "start": "node build/server.js",
    "dev": "svelte-kit dev",
    "dev:lib": "pnpm -r run build -w",
    "build": "svelte-kit build && pnpm build:server",
    "build:lib": "pnpm packages run build",
    "build:server": "vite build",
    "package": "svelte-kit package",
    "preview": "svelte-kit preview",
    "prepare": "prisma generate",
    "pretest": "pnpm package",
    "setup": "pnpm install && pnpm build:lib",
    "test": "vitest",
    "e2e": "vitest run --mode e2e",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@discordjs/rest": "^0.4.1",
    "@next-auth/prisma-adapter": "^1.0.3",
    "@prisma/client": "^3.14.0",
    "cookie": "^0.5.0",
    "discord-api-types": "^0.33.0",
    "discord.js": "^13.7.0",
    "express": "^4.18.1",
    "fast-glob": "^3.2.11",
    "next-auth": "^4.3.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@hey-amplify/scripts": "workspace:*",
    "@hey-amplify/support": "workspace:*",
    "@hey-amplify/tsconfig": "workspace:*",
    "@sveltejs/adapter-node": "1.0.0-next.76",
    "@sveltejs/kit": "1.0.0-next.345",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.41",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "carbon-components-svelte": "^0.64.2",
    "carbon-icons-svelte": "^11.0.1",
    "carbon-preprocess-svelte": "^0.9.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "jsdom": "^20.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "prisma": "^3.14.0",
    "svelte": "3.48.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess": "^4.10.6",
    "svelte2tsx": "^0.5.10",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "vite-node": "^0.12.9",
    "vitest": "^0.12.9"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false,
    "svelteSortOrder": "scripts-markup-styles",
    "svelteStrictMode": true,
    "svelteBracketNewLine": true,
    "svelteAllowShorthand": false,
    "plugins": [
      "./node_modules/prettier-plugin-svelte"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "browser": false,
      "node": true
    },
    "plugins": [
      "svelte3",
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "*.cjs"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ]
  },
  "packageManager": "pnpm@7.1.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
